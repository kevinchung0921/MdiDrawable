<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MdiView">

        <attr name="useGradient" format="boolean" />
        <attr name="bgColor" format="boolean" />
        <attr name="gradientStartColor" format="color" />
        <attr name="gradientEndColor" format="color" />
        <attr name="gradientOrientation">
            <enum name="topDown" value="0" />
            <enum name="tr_bl" value="1" />
            <enum name="rightLeft" value="2" />
            <enum name="br_tl" value="3" />
            <enum name="bottomTop" value="4" />
            <enum name="bl_tr" value="5" />
            <enum name="leftRight" value="6" />
            <enum name="tl_br" value="7" />
        </attr>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="strokeGap" format="dimension"/>
        <attr name="cornerRadius" format="dimension"/>
    </declare-styleable>
</resources>